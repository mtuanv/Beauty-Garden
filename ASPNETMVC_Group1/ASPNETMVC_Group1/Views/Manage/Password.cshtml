<div class="tab-pane" id="password">
	<h6>Đổi mật khẩu</h6>
	<hr>
	<form action="#" id="changePassword">
		<div class="form-group">
			<label for="OldPassword">Mật khẩu hiện tại</label>
			<input type="password" class="form-control" id="OldPassword" name="OldPassword" value="">
			<small id="op-valid" class="text-danger"></small>
		</div>
		<div class="form-group">
			<label for="NewPassword">Mật khẩu mới</label>
			<input type="password" class="form-control" id="NewPassword" name="NewPassword" value="">
			<small id="np-valid" class="text-danger"></small>
		</div>
		<div class="form-group">
			<label for="ConfirmPassword">Xác nhận mật khẩu</label>
			<input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" value="">
			<small id="cp-valid" class="text-danger"></small>
		</div>
		<button type="button" class="btn btn-primary" id="updatePassword">Lưu</button>
	</form>
</div>
