		function boxSearch() {
			var n = $("#keyword").val();
			n.length >= 2 &&
				($("#keyword")
					.autocomplete({
						source: function (t, i) {
							$.ajax({
								url: "/TimKiem/BoxSanPham?keyword="+n,
								type: "GET",
								success: function (n) {
									i(n);
								},
							});
						},
						minLength: 2,
						select: function (n, t) {
							return (window.location.href = "/SanPham/" + t.item.MaSanPham), !1;
						},
					})
					.data("ui-autocomplete")._renderItem = function (n, t) {
						return $("<li></li>")
							.data("item.autocomplete", t)
							.append(
								'<div class="box-auto"><img src="' +
								t.anh.LinkAnh +
								'" class="img-reponsive" /><div class="auto-content"><span class="title-auto">' +
								t.TenSanPham +
								'</span><div class="pric-max"><span>' +
								t.GBJS +
								"₫</span><span>" +
								t.GTTJS +
								'₫</span></div></div><div class="clr"></div></div>'
							)
							.appendTo(n);
					});
		}
