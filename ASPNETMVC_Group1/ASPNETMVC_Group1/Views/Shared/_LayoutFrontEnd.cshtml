		function CheckBrand() {
			if (localStorage.getItem('location') != null)
				document.getElementById('location').innerHTML = localStorage.getItem('location');
			else {
				$("#ModalBranh").modal('show');
				var _rs = HtmlBranh();
				$("#load-branh").html(_rs);
			}
		}
		function SetBranh(e) {
			document.getElementById('location').innerHTML = e;
			localStorage.setItem('location', e);
			$("#ModalBranh").modal('hide');
		}
		function HtmlBranh() {
			var html = "";
			html += "<div class=\"branh-box\">";
			html += "<div class=\"title-btans\"><span><b>CHỌN KHU VỰC GẦN BẠN NHẤT</b></span></div>";
